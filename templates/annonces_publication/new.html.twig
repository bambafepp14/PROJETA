
{% extends 'base.html.twig' %}

{% block title %}Votre titre ici{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
            
            <div class="form-group">
                {{ form_label(form.titre, 'Titre') }}
                {{ form_widget(form.titre, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.lieu, 'Lieu') }}
                {{ form_widget(form.lieu, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.description, 'Description') }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.salaire, 'Salaire') }}
                {{ form_widget(form.salaire, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.duree, 'Dur√©e') }}
                {{ form_widget(form.duree, {'attr': {'class': 'form-control'}}) }}
            </div>
            
            <button type="submit" class="btn btn-primary">Enregistrer</button>
            
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
