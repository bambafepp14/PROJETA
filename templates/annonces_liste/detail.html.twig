{% extends 'base.html.twig' %}

{% block title %}{{ titrePage }}{% endblock %}

{% block body %}
    <div class="container" style="height: 100vh;">

        {% for message in app.flashes('notification') %}
            <div class="alert alert-info alert-dismissible fade show">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
        {% endfor %}

        <div class="card  bg-light" style="width: 75vw; height: 50vh;">
            <div class="card-body">
                <h5 class="card-title display-6">{{ titrePage }}</h5>
                <div class="row" style="height: 55%;">
                    <p class="card-text mt-3">{{ annonce.description }}</p>
                </div>
                <div class="row">
                    <div class="col-2">
                        Durée hebdomadaire :
                    </div>
                    <div class="col-1">
                        {{ annonce.duree }} heure(s)
                    </div>
                </div>
                <div class="row">
                    <div class="col-2">
                        Salaire mensuel :
                    </div>
                    <div class="col-1">
                        {{ annonce.salaire }} €
                    </div>
                </div>
                <div class="row d-flex justify-content-between mt-4">
                    <div class="col-1">
                        <a href="{{ path('app_annonces_liste') }}" class="btn btn-dark">Retour</a>
                    </div>
                    {% if is_granted('ROLE_CANDIDAT') %}
                    <div class="col-1">
                        <a href="{{ path('app_annonces_postuler', {'id': annonce.id }) }}" class="btn btn-success">Postuler</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
